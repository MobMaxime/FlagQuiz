<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textViewStyle">@font/amaticsc_bold</item>
        <item name="android:fontFamily">@font/amaticsc_bold</item>
        <item name="fontFamily">@font/amaticsc_bold</item> <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->
        <item name="colorPrimary">@color/DarkRed</item>
        <item name="colorPrimaryDark">@color/DarkRed</item>
        <item name="colorAccent">@color/DarkRed</item>
    </style>
</resources>
